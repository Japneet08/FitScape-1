         <!-- Popup Container -->
   
         <div class="popup-overlay" id="popupOverlay">
            <div class="popup-content">
              <div class="popup-header">
                <h2>Welcome to FitScape</h2>
                <p>Please Login or Register to continue</p>
              </div>
          
              <!-- Popup Body -->
              <div class="popup-body">
                <!-- Error Messages -->
                <div id="errorMessages" class="error-messages" style="display: none;"></div>
          
                <!-- Success Message -->
                <div id="successMessage" style="display: none; color: blue; font-weight: bold;"></div>
          
                <!-- Login/Register Option Buttons -->
                <div class="popup-options">
                  <button class="popup-option-btn active" id="loginTabBtn">Login</button>
                  <button class="popup-option-btn" id="registerTabBtn">Register</button>
                </div>
          
                <!-- Login Form -->
                <form id="loginForm" class="form-section" action="/login" method="post">
                  <input type="email" placeholder="Email Address" id="loginEmail" name="email" required>
                  <input type="password" placeholder="Password" id="loginPassword" name="password" required>
                  <button type="submit" class="btn btn-primary">Login</button>
                  <p><a href="#" id="forgotPasswordLink">Forgot Password?</a></p>
                </form>
          
                <!-- Register Form -->
                <form id="registerForm" class="form-section" action="/user/register" method="post" style="display: none;">
                  <input name="fullname" type="text" placeholder="Full Name" id="registerName" required>
                  <input name="email" type="email" placeholder="Email Address" id="registerEmail" required>
                  <input name="password" type="password" placeholder="Create Password" id="registerPassword" required>
                  <button type="submit" class="btn btn-primary">Register</button>
                </form>
          
                <!-- OTP Form -->
                <form action="/user/verify-email" method="post" id="otpForm" class="form-section" style="display: none;">
                  <h3 class="otp-title">Verify Your Email</h3>
                  <p class="otp-description">We sent a 6-digit OTP to your email. Please enter it below to verify your account.</p>
          
                  <!-- OTP Input Fields -->
                  <div class="otp-input-container">
                    <input type="text" id="otpInput1" maxlength="1" class="otp-input" required autofocus>
                    <input type="text" id="otpInput2" maxlength="1" class="otp-input" required>
                    <input type="text" id="otpInput3" maxlength="1" class="otp-input" required>
                    <input type="text" id="otpInput4" maxlength="1" class="otp-input" required>
                    <input type="text" id="otpInput5" maxlength="1" class="otp-input" required>
                    <input type="text" id="otpInput6" maxlength="1" class="otp-input" required>
                  </div>
          
                  <!-- OTP Resend -->
                  <p class="otp-resend">
                    Didn't receive the OTP? <a href="#" id="resendOtpLink">Resend OTP</a>
                  </p>
          
                  <!-- Submit Button -->
                  <button type="submit" class="btn btn-primary otp-btn">Verify OTP</button>
          
                  <div id="otpError" class="otp-error" style="display: none;">Invalid OTP. Please try again.</div>
                </form>
              </div>
            </div>
